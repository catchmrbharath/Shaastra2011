<RelativeLayout android:id="@+id/relativeLayout1"
     android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical"
      android:background="#FFFFFF"
       xmlns:android="http://schemas.android.com/apk/res/android">
       <LinearLayout android:id = "@+id/linearLayout2"
       		android:layout_width="fill_parent"
       		android:layout_height="wrap_content"
       		android:background ="@drawable/gradient"
       		android:orientation="vertical"
       		android:layout_alignParentTop="true">
       		<TextView android:id = "@+id/event_category"
       		android:layout_width="fill_parent"
       		android:layout_height="wrap_content"
       		android:text="Category"
       		android:textColor="#FFFFFF"
       		android:textSize="20sp"
       		android:textStyle="bold"
       		android:shadowColor="#000000"
       		android:shadowDx="1.0 "
       		android:shadowDy="1.0 "
       		android:shadowRadius="0.25"
       		
       		></TextView>
       		<RelativeLayout android:id="@+id/relativeLayout3"
       		android:layout_width="fill_parent"
       		android:layout_height = "fill_parent"
       		android:layout_marginBottom="20dp"
       		>
       		<com.shaastra.views.ReflectionLayout xmlns:android="http://schemas.android.com/apk/res/android"
       		android:layout_alignParentTop="true"
       		android:layout_height="wrap_content"
       		android:layout_width="wrap_content"
       		android:layout_marginLeft="30dp"
       		android:layout_marginTop="20dp"
       		
       		>
       		
       		
       			<ImageView android:id="@+id/event_image"
       			android:layout_height="80dp"
       			android:layout_width ="120dp"
       			android:src = "@drawable/impact"
       			android:layout_alignParentTop = "true"
       			android:background="#FFFFFF"
       			android:adjustViewBounds="true"
       			>
       			</ImageView>
       			</com.shaastra.views.ReflectionLayout>
       			<LinearLayout 
       			android:layout_height="wrap_content"
       			android:layout_width="wrap_content"
       			android:layout_alignParentRight="true"
       			android:layout_toRightOf="@id/event_image"
       			android:orientation="vertical"
       			android:layout_marginTop="10dp"
       			android:gravity="center_vertical">
       			
       			<TextView android:id="@+id/prizeLabel"
       			android:layout_height="wrap_content"
       			android:text="Prize Money"
       			android:layout_marginRight="20dp"
       			android:layout_marginLeft="20dp"
       			android:layout_marginTop="30dp"
       			android:textStyle="bold"
       			android:textColor="#FFFFFF" 
       			android:layout_width="wrap_content"
       			android:gravity="center_horizontal"> 
       			</TextView>
       			<TextView android:id="@+id/prizeMoney"
       			android:layout_height="wrap_content"
       			
       			android:text="Rs. 10000"
       			android:textColor="#FFFFFF"
       			android:gravity="center_horizontal"
       			android:layout_marginLeft="20dp"
       			android:layout_marginRight="20dp" 
       			android:layout_width="wrap_content">
       			</TextView>
       			</LinearLayout>
       			
       		
       		
       		</RelativeLayout>
       		</LinearLayout>
       		
       	
       		
       		
       		<HorizontalScrollView
       		android:layout_height="wrap_content"
       		android:layout_width="fill_parent"
       		android:layout_below="@id/linearLayout2"
       		android:background="#000000"
       		android:id="@+id/SegmentedScrollView"
       		>
       		<RadioGroup
       		android:layout_height = "wrap_content"
       		android:layout_width = "wrap_content"
       		android:orientation = "horizontal"
       		android:id="@+id/segmented_control"
       		
       		/>
       		</HorizontalScrollView> 
       		<ScrollView                                                                         
                      android:id="@+id/vert"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:scrollbars="vertical"
                      android:layout_below="@id/SegmentedScrollView">
       		 <TextView android:id="@+id/eventDescription"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:text=""
       		android:textSize="14sp"
       		android:textColor="#000000"
       		
       		android:scrollbars="vertical"
       		android:maxLines="300"
       		>
       		</TextView>   
       		</ScrollView>
       		  		
       </RelativeLayout>
